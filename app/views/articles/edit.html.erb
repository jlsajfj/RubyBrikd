<h1>Edit your article</h1>

<% if @article.errors.any? %>
    <h2>The following errors occurred...</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </ul>
<% end %>


<%# form_for is a ruby plugin to assist with forms -%>
<%= form_for @article do |f| %>
    <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body %><br/>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit %>
    </p>

<% end %>